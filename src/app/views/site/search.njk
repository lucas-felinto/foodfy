{% extends "site/layout.njk" %}

{% block content %}

    <div class="index-title">
        <h4> Buscando por {{ filter }} </h4>
    </div>
    <div class="index-recipes">

        {% for recipe in recipes %}
        
        <div class="index-recipe">
            <div class="recipe-image">
                <div class="images"><img src="{{recipe.image}}" alt=""></div>
            </div>
            <div class="recipe-text">
                <div class="plate">{{recipe.title}}</div>
                <div class="name">{{recipe.chef_name}}</div>
                <div class="visualizar"><a href="/site/recipes/{{recipe.id}}">Visualizar</a></div>
            </div>
        </div>

        {% endfor %}

    </div>  
    
    </div>

    <script>

        const currentPage = location.pathname
        const menuItems = document.querySelectorAll("#menu a")
        const recipesNav = document.querySelector(".aRecipe")
    
        for (item of menuItems) {
            if (currentPage.includes("search")) {
                recipesNav.classList.add("active")
            }
        }
        
    </script>

{% endblock %}