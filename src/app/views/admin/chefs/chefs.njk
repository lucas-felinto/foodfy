{% extends "admin/layout_admin.njk" %}

{% block content %}

    <div class="index-title">
        <h4> Gerenciar chefs </h4>
    </div>

    <div class="button-add"><a href="/admin/chefs/create"> Adicionar Chefs </a></div>

    <div class="chefs-container">
        
        <div class="chef">
            {% for chef in chefs %}
                <div class="card-chef">
                    <div class="chef_avatar">
                        <img src="{{ chef.avatar_url }}">
                    </div>
                    <div class="chef_details">
                        <div class="chef_name">
                            <p>
                                {{chef.chef_name}}
                            </p>
                        </div>
                        <div class="visualizar">
                            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>    
        
    </div>

{% endblock %}